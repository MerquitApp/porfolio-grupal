---
import GithubIcon from "./GithubIcon.astro";

type Props = {
  name: string;
  githubLink: string;
  description: string;
};

const { name, githubLink, description } = Astro.props;
---

<li
  class="flex justify-between items-center c-gray-600 hover:c-black transition relative border-b-1 border-b-gray-200"
>
  <div
    class="c-black h-100% flex flex-col justify-center h-[100%] pl-12.5 flex flex-col gap-3"
  >
    <h3 class="project-title">{name}</h3>
    <small>{description}</small>
  </div>
  <div
    class="grid-col-[span_2] justify-self-center flex flex-col justify-center h-100% h-[100%] border-l-gray-200 border-l-1 pl-12.5"
  >
    <a href={githubLink} class="text-10 md:text-17">
      <GithubIcon />
      <div class="sr-only">
        Â¡Visita el repositorio de {name}!
      </div>
    </a>
  </div>
</li>
